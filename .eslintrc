{
  "extends": ["squarespace",
    "squarespace/react",
    "prettier",
    "plugin:prettier/recommended",
    
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "prettier/react"
  ],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.prod.js"
      }
    }
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "warn"
  }
}
